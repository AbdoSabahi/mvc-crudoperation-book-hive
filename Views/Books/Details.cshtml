@model Book
@{
    ViewData["Title"] = "Details";
}



<div class="w-75  mx-auto  text-center">
    <h2 class="mb-3">@Model.Title</h2>
    <p ><strong>Author:</strong> @Model.Author</p>
    <p ><strong>Category:</strong> @Model.Category.Name</p>
    <p ><strong>Description:</strong> @Model.Description</p>
    <p ><strong>Added On:</strong> @Model.AddedOn.ToString("yyyy-MM-dd")</p>


    <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@Model.Id">
        <i class="fa-solid fa-pen"></i> Edit
    </a>

    <form asp-action="Delete" asp-route-id="@Model.Id" method="post" style="display:inline">
        <button type="submit" class="btn btn-sm btn-danger"
                onclick="return confirm('Are you sure you want to delete this book?');">
            <i class="fa-solid fa-trash"></i> Delete
        </button>
    </form>
    <br />
    <a class="btn btn-sm btn-primary w-50 mx-auto mt-5" asp-action="Index">
        <i class="fa-solid fa-backward"></i> Back
    </a>

</div>