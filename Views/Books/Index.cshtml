@model IEnumerable<Book>
@{
    ViewData["Title"] = "Index";
}

<h1 class="text-primary">Books</h1>
<hr />
<a class="btn btn-primary my-4" asp-area="" asp-controller="Books" asp-action="Create" >
    <i class="fa-solid fa-plus"></i>
   Add New
</a>


@if (!Model.Any())
{
    <div class="alert alert-warning">
        No book added yet
    </div>
}
else
{
    <table class="table  ">
        <thead>
            <tr>
                <th>Titel</th>
                <th>Author</th>
                <th>Category</th>
                <th>Description</th>
                <th>Added On</th>

                <th>Action</th>
            </tr>



        </thead>
        <tbody>
            @foreach (var book in Model)
            {
                <tr>
                    <td>
                        <a asp-action="Details" asp-route-id="@book.Id" class="text-decoration-none">
                            @book.Title
                        </a>
                    </td>
                    <td>@book.Author</td>
                    <td>@book.Category?.Name</td>
                    <td>@book.Description</td>
                    <td>@book.AddedOn.ToString("yyyy-MM-dd")</td>

                    <td>


                        <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@book.Id">
                            <i class="fa-solid fa-pen"></i> Edit
                        </a>
                        <form asp-action="Delete" asp-route-id="@book.Id" method="post" style="display:inline">
                            <button type="submit" class="btn btn-sm btn-danger"
                                    onclick="return confirm('Are you sure you want to delete this book?');">
                                <i class="fa-solid fa-trash"></i> Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }



        </tbody>






    </table>
}


